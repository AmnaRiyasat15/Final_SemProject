@using FurnitureEmporim.Models.Entities
@model FurnitureEmporim.Models.Entities.Userss


@{
    string? cooName = ViewContext.HttpContext.Request.Cookies["Username"];
    string? cooEmail = ViewContext.HttpContext.Request.Cookies["Email"];
   
}


<div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark\\:bg-gray-700">
        <div class="px-6 py-4">
            <div class="flex justify-center mx-auto">
                <img src="~/images/home-button.png" alt="some image" style="width: 100px; height: 100px;" />
            </div>

            <h3 class="mt-3 text-xl font-medium text-center text-gray-600">Register</h3>

            <form asp-action="Register" method="post">
                <div class="w-full mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" asp-for="Username" placeholder="User Name" type="name" aria-label="User Name" value="@cooName"/>
                </div>
                <div class="w-full mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" asp-for="Email" placeholder="Email Address" type="email" aria-label="Email Address" value="@cooEmail"/>
                </div>

                <div class="w-full mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" asp-for="Password" placeholder="Password" type="password" aria-label="Password"/>
                </div>

                <div class="flex items-center justify-center py-4 text-center bg-gray-100">
                    <button type="submit" class="block px-4 py-2 mt-2 text-sm font-bold text-blue-500 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400 dark:text-blue-400 hover:underline">
                        Register
                    </button>
                </div>
            </form>

            <div class="flex items-center justify-center py-4 text-center bg-gray-100">
                <span class="text-sm text-gray-600 dark:text-gray-500">Already have an account?</span>
                <a href="/User/Index" class="mx-2 text-sm font-bold text-blue-500 dark:text-blue-400 hover:underline">Login</a>
            </div>
        </div>
    </div>
</div>
