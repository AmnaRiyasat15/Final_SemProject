@using FurnitureEmporim.Models.Entities
@model FurnitureEmporim.Models.Entities.Userss



@{
   string? cooName =  ViewContext.HttpContext.Request.Cookies["Email"];
   
}


<div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-md dark\:bg-gray-700">
        <div class="px-6 py-4">
            <div class="flex justify-center mx-auto">
                <img src="~/images/home-button.png" alt="some image" style="width: 100px; height: 100px;" />
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Showmsg))
            {
                <p style="color: red;" text-ali>@ViewBag.Showmsg</p>
            }
            <h3 class="mt-3 text-xl font-medium text-center text-gray-600">Login</h3>

            <form asp-action="Index" method="post">

                <div class="w-full mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" asp-for="Email" type="email" placeholder="Email Address" aria-label="Email Address" value = "@cooName"/>
                </div>

                <div class="w-full mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" asp-for="Password" type="password" placeholder="Password" aria-label="Password"/>
                </div>

                <div class="flex items-center justify-between mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400"  type="submit" name="submitbutton" value="Login"/>
                </div>

                <div class="flex items-center justify-between mt-4">
                    <input class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:border-gray-600 dark:placeholder-black-400" type="submit" name="submitbutton" value="Guest User" />
                </div>
            </form>
        </div>

        <div class="flex items-center justify-center py-4 text-center bg-gray-100">
            <span class="text-sm text-gray-600 dark:text-gray-500">Don't have an account? </span>

            <a href="/User/Register" class="mx-2 text-sm font-bold text-blue-500 dark:text-blue-400 hover:underline">Create Account</a>
        </div>
    </div>
</div>
