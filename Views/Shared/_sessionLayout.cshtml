

@{
    string? UserName = ViewContext.HttpContext.Session.GetString("UserNameSession");
    string? UserEmail = ViewContext.HttpContext.Session.GetString("EmailSession");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FurnitureEmporim</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FurnitureEmporim.styles.css" asp-append-version="true" />
</head>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .about {
        background: url('furniture.jpg') no-repeat center center;
        background-size: cover;
        color: white;
        text-align: center;
        padding: 100px 20px;
        position: relative;
    }

        .about h2 {
            font-size: 3em;
            margin-bottom: 10px;
        }

        .about p {
            font-size: 1.2em;
            margin: 0;
        }

    .our-hotel {
        background-color: #fff;
        padding: 60px 20px;
        text-align: center;
    }

        .our-hotel h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #333;
        }

        .our-hotel p {
            font-size: 1.1em;
            line-height: 1.8;
            color: #666;
            margin-bottom: 30px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .our-hotel hr {
            width: 50px;
            border: 1px solid #e7b247;
            margin: 0 auto 40px auto;
        }

    footer {
        background-color: #333;
        color: #fff;
        padding: 20px 0;
        text-align: center;
    }

        footer .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
        }

        footer a {
            color: #fff;
            text-decoration: none;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>
<body>

    <!--Header -->
    <header>
        <div class="w-full p-5 flex flex-col md:flex-row items-center bg-sky-300 text-white">
            <a class="flex title-font font-medium items-center text-gray-900">
                <span class="text-xl text-white">FurnitureEmporium</span>
            </a>
            <nav class="flex flex-wrap items-center text-base justify-center mx-auto space-x-5">
                <a href="/Home/Index" class="relative px-3 py-2 hover:bg-sky-400 hover:text-white cursor-pointer rounded transition-all duration-300">Home</a>
                <a href="/About/Index" class="relative px-3 py-2 hover:bg-sky-400 hover:text-white cursor-pointer rounded transition-all duration-300">About</a>
                <a href="/Products/Index" class="relative px-3 py-2 hover:bg-sky-400 hover:text-white cursor-pointer rounded transition-all duration-300">Products</a>
                <a asp-action="AddToCart" asp-controller="Cart" class="relative px-3 py-2 hover:bg-sky-400 hover:text-white cursor-pointer rounded transition-all duration-300">Cart</a>
                
                 <div class="nav-item dropdown"> 
               
                    <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li class="dropdown-item">Welcome, @UserName</li>
                        <!-- <li class="dropdown-item">@UserEmail</li> -->
                       
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-action="Logout" asp-controller="User">Logout</a></li>
                    </ul>
                </div>
            </nav>


        </div>



    </header>


    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
